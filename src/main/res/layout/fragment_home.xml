<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 顶部区域：显示上午/下午、具体时间、年月日和总得分 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"> <!-- 添加顶部间距 -->

            <!-- 左侧：上午/下午和具体时间 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/am_pm_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上午"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00:00"
                    android:textStyle="bold"
                    android:textSize="18sp" />

            </LinearLayout>

            <!-- 右侧：年月日和总得分 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-04-10"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/total_score_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总分: 0"
                    android:textColor="@color/GOLD"
                    android:textStyle="bold"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="0dp">

            <TextView
                android:id="@+id/stopwatch_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textStyle="bold"
                android:layout_marginEnd="50dp"
                android:textSize="25sp"
                android:textColor="#7E041D" />
            <!-- 启动按钮 -->
            <Button
                android:id="@+id/start_stopwatch_button"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="S"
                android:textStyle="bold"
                android:background="@drawable/button_bg_yinse"
                android:layout_marginEnd="10dp" />

            <!-- 暂停按钮 -->
            <Button
                android:id="@+id/pause_stopwatch_button"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="||"
                android:textStyle="bold"
                android:background="@drawable/button_bg_yinse"
                android:layout_marginEnd="10dp" />  <!-- 为按钮之间增加间距 -->

            <!-- 清零按钮 -->
            <Button
                android:id="@+id/reset_stopwatch_button"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:background="@drawable/button_bg_yinse"
                android:text="R" />
        </LinearLayout>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:paddingHorizontal="16dp">

        <!-- 左侧列按钮：任务、课程、代码、技能、背诵 -->
        <Button
            android:id="@+id/task_button"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="任务"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_bg_blue" />

        <Button
            android:id="@+id/schedule_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="作息"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_bg_blue" />

        <Button
            android:id="@+id/course_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="课程"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_bg_blue" />

        <Button
            android:id="@+id/exercise_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="运动"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_bg_blue" />

        <Button
            android:id="@+id/code_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="代码"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_bg_blue" />

        <Button
            android:id="@+id/writing_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="练字"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_bg_blue" />

        <Button
            android:id="@+id/skill_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="技能"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_bg_blue" />

        <Button
            android:id="@+id/music_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="音乐"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_bg_blue" />

        <Button
            android:id="@+id/review_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="背诵"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_bg_blue" />

        <!-- 右侧列按钮：作息、运动、练字、音乐 -->

        <Button
            android:id="@+id/penalty_button"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="惩罚"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_bg_red" />

        </GridLayout>


    <!-- 底部区域：每日积分和总积分 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
        <Button
            android:id="@+id/delete_button"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/delete_background"
            android:textColor="@color/yinse"
            android:text="Delete !"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/daily_score_icon"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@drawable/diandian"
            android:layout_marginStart="60dp"
            android:contentDescription="Daily Score Icon"/>
    </LinearLayout>
        <TextView
            android:id="@+id/daily_score_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日积分: 0/100"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <!-- 左侧：当前等级 -->
            <TextView
                android:id="@+id/level_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="当前等级: 0"
                android:textSize="18sp"
                android:layout_marginStart="50dp"
                android:textStyle="bold"
                android:gravity="start" />

            <!-- 右侧：距离晋级还差 -->
            <TextView
                android:id="@+id/level_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离晋级还差: 0"
                android:textSize="18sp"
                android:gravity="end"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <!-- 滚动区域 -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fillViewport="true"
            android:background="@drawable/rounded_background"
            android:overScrollMode="ifContentScrolls">

            <LinearLayout
                android:id="@+id/reward_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp" />

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</ScrollView>
