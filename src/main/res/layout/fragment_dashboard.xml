<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <!-- Display Year and Month at the top -->
    <LinearLayout
        android:id="@+id/yearMonthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/yearText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025"
            android:textSize="30sp"
            android:layout_marginEnd="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/monthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="January"
            android:textSize="30sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- GridView for displaying calendar with dates and scores -->
    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="0dp"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:numColumns="7"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/yearMonthLayout" />

    <!-- Total Score and Daily Score Labels -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/gridView"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Total Score -->
        <TextView
            android:id="@+id/total_score_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总得分: 0"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <!-- Daily Score -->
        <TextView
            android:id="@+id/daily_score_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日得分: 0/100"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
